{
  "name": "@ai-company/monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "full-check": "pnpm -s build && pnpm -s build:tests && pnpm -s lint:fix && pnpm -s test:unit",
    "build": "turbo run build",
    "build:tests": "turbo run build:tests",
    "build:packages": "turbo run build --filter='./packages/*'",
    "lint:packages": "turbo run lint --filter='./packages/*'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "test:unit": "turbo run test:unit",
    "test:packages": "turbo run test --filter='./packages/*'",
    "test:packages:cov": "turbo run test:cov --filter='./packages/*'",
    "test:cov": "turbo run test:cov",
    "test:e2e": "turbo run test:e2e --concurrency=1",
    "test:e2e:local": "turbo run test:e2e:local",
    "commit": "pnpm cz",
    "deps:up": "podman compose up -d",
    "deps:down": "podman compose down",
    "local-llm:install": "./scripts/install-local-models.sh",
    "local-llm:start": "nohup ollama serve >/tmp/ollama.log 2>&1 &",
    "local-llm:stop": "pkill -x ollama || true",
    "prepare": "husky",
    "up-versions": "./scripts/up-versions.sh"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "turbo": "^2.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@swc/core": "^1.15.8",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-angular": "^8.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jira-prepare-commit-msg": "^1.7.2",
    "npm-check-updates": "^19.2.0",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "resolutions": {
    "jose": "^5.10.0"
  },
  "jira-prepare-commit-msg": {
    "messagePattern": "[$J] $M",
    "jiraTicketPattern": "([A-Z]+-\\d+)",
    "isConventionalCommit": true,
    "allowEmptyCommitMessage": false
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
