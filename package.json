{
  "name": "@ai-company/monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "lint:packages": "turbo run lint --filter='./packages/*'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:packages": "turbo run test --filter='./packages/*'",
    "test:packages:cov": "turbo run test:cov --filter='./packages/*'",
    "test:cov": "turbo run test:cov",
    "test:e2e": "turbo run test:e2e --concurrency=1",
    "test:e2e:local": "turbo run test:e2e:local",
    "commit": "pnpm cz",
    "deps:up": "podman compose up -d",
    "deps:down": "podman compose down",
    "prepare": "husky",
    "up-versions": "./scripts/up-versions.sh"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "turbo": "^2.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-angular": "^8.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jira-prepare-commit-msg": "^1.7.2",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "unplugin-swc": "^1.5.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "resolutions": {
    "jose": "^5.10.0"
  },
  "jira-prepare-commit-msg": {
    "messagePattern": "[$J] $M",
    "jiraTicketPattern": "([A-Z]+-\\d+)",
    "isConventionalCommit": true,
    "allowEmptyCommitMessage": false
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
